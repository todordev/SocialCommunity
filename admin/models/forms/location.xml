<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>

        <field name="name" type="text"
               size="40"
               label="COM_SOCIALCOMMUNITY_NAME"
               description="COM_SOCIALCOMMUNITY_LOCATION_NAME_DESC"
               filter="trim"
               required="true"/>

        <field name="latitude" type="text"
               label="COM_SOCIALCOMMUNITY_LATITUDE"
               description="COM_SOCIALCOMMUNITY_LATITUDE_DESC"
               filter="trim"
                />

        <field name="longitude" type="text"
               label="COM_SOCIALCOMMUNITY_LONGITUDE"
               description="COM_SOCIALCOMMUNITY_LONGITUDE_DESC"
                />

        <field name="country_code" type="text"
               label="COM_SOCIALCOMMUNITY_COUNTRY_CODE"
               description="COM_SOCIALCOMMUNITY_COUNTRY_CODE_DESC"
                />

        <field name="timezone" type="timezone"
               label="COM_SOCIALCOMMUNITY_TIMEZONE"
               description="COM_SOCIALCOMMUNITY_TIMEZONE_DESC"
                />

        <field name="state_code" type="text"
               label="COM_SOCIALCOMMUNITY_STATE"
               description="COM_SOCIALCOMMUNITY_LOCATION_STATE_DESC"
                />

        <field name="published" type="list"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               filter="intval"
               size="1"
               default="1"
                >
            <option value="1">JPUBLISHED</option>
            <option value="0">JUNPUBLISHED</option>
        </field>

        <field name="id" type="text" default="0" label="JGLOBAL_FIELD_ID_LABEL"
               readonly="true" class="readonly"
               description="JGLOBAL_FIELD_ID_DESC"/>

    </fieldset>
</form>